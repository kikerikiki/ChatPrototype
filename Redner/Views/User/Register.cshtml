@model LAPTemplateMVC.Models.dboSchema.Chatuser

<h2>Register</h2>

<form asp-action="Register" method="post">
    <div>
        <label asp-for="Username"></label>
        <input asp-for="Username" />
        <span asp-validation-for="Username"></span>
    </div>
    <div>
        <label asp-for="Passwordhash"></label>
        <input asp-for="Passwordhash" type="password" />
        <span asp-validation-for="Passwordhash"></span>
    </div>
    <div>
        <label asp-for="Publickey"></label>
        <input asp-for="Publickey" />
        <span asp-validation-for="Publickey"></span>
    </div>
    <button type="submit">Register</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
